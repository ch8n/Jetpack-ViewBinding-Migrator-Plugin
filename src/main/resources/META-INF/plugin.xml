<idea-plugin>
    <id>com.github.ch8n.jetpackviewbindingmigratorplugin</id>
    <name>Jetpack-ViewBinding-Migrator-Plugin</name>
    <vendor>ch8n</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.ch8n.jetpackviewbindingmigratorplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.ch8n.jetpackviewbindingmigratorplugin.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.ch8n.jetpackviewbindingmigratorplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
